# Application Configuration
APP_NAME={{ cookiecutter.project_name }}
APP_DESCRIPTION={{ cookiecutter.project_description }}
DEBUG=False
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
{%- if cookiecutter.use_postgresql == 'y' %}
DATABASE_URL=postgresql+asyncpg://{{ cookiecutter.db_user }}:password@postgres:5432/{{ cookiecutter.db_name }}
DB_HOST=postgres
DB_PORT=5432
DB_NAME={{ cookiecutter.db_name }}
DB_USER={{ cookiecutter.db_user }}
DB_PASSWORD=your-secure-password-here
{%- elif cookiecutter.use_sqlite == 'y' %}
DATABASE_URL=sqlite+aiosqlite:///./{{ cookiecutter.project_slug }}.db
{%- else %}
DATABASE_URL=sqlite+aiosqlite:///./test.db
{%- endif %}

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (optional)
{%- if cookiecutter.use_redis == 'y' %}
REDIS_URL=redis://redis:6379
CACHE_ENABLED=True
{%- else %}
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=False
{%- endif %}

# Application Keys
SECRET_KEY=your-secret-key-here

# Security Headers
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]
